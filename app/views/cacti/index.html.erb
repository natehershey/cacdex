<h1>Listing cacti</h1>

<table>
  <tr>
    <th>Common name</th>
    <th>Latin name</th>
    <th>Description</th>
    <th>Notes</th>
    <th>Planted on</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cacti.each do |cactus| %>
  <tr>
    <td><%= cactus.common_name %></td>
    <td><%= cactus.latin_name %></td>
    <td><%= cactus.description %></td>
    <td><%= cactus.notes %></td>
    <td><%= cactus.planted_on %></td>
    <td><%= cactus.image %></td>
    <td><%= link_to 'Show', cactus %></td>
    <td><%= link_to 'Edit', edit_cactus_path(cactus) %></td>
    <td><%= link_to 'Destroy', cactus, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

